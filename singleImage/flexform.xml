<T3DataStructure>
	<ROOT>
		<type>array</type>
			<el>
				<image>
					<TCEforms type="array">
						<label>Image</label>
						<config>
							<type>inline</type>
							<maxitems>1</maxitems>
							<foreign_table>sys_file_reference</foreign_table>
							<foreign_field>uid_foreign</foreign_field>
							<foreign_sortby>sorting_foreign</foreign_sortby>
							<foreign_table_field>tablenames</foreign_table_field>
							<foreign_match_fields type="array">
								<fieldname>flexform_singleimage_image</fieldname>
							</foreign_match_fields>
							<foreign_label>uid_local</foreign_label>
							<foreign_selector>uid_local</foreign_selector>
							<foreign_selector_fieldTcaOverride type="array">
								<config>
									<appearance>
										<elementBrowserType>file</elementBrowserType>
										<elementBrowserAllowed>gif,jpg,jpeg,tif,bmp,pcx,tga,png</elementBrowserAllowed>
									</appearance>
								</config>
							</foreign_selector_fieldTcaOverride>
							<foreign_types type="array">
								<numIndex index="2" type="array">
									<showitem>title,alternative,--palette--;;filePalette</showitem>
								</numIndex>
							</foreign_types>
							<appearance type="array">
								<useSortable>TRUE</useSortable>
								<headerThumbnail type="array">
										<field>uid_local</field>
										<width>64</width>
										<height>64</height>
								</headerThumbnail>

								<showSynchronizationLink>TRUE</showSynchronizationLink>
								<enabledControls type="array">
									<info>FALSE</info>
									<new>FALSE</new>
									<dragdrop>TRUE</dragdrop>
									<sort>FALSE</sort>
									<hide>TRUE</hide>
									<delete>TRUE</delete>
									<delete>TRUE</delete>
								</enabledControls>
							</appearance>
						</config>
					</TCEforms>
				</image>
				<link>
					<TCEforms type="array">
						<label>Link</label>
						<config type="array">
							<type>input</type>
							<size>48</size>
							<max>256</max>
							<checkbox></checkbox>
							<eval>trim</eval>
							<wizards type="array">
								<_PADDING type="integer">2</_PADDING>
								<link type="array">
									<type>popup</type>
									<title>Link</title>
									<icon>link_popup.gif</icon>
									<script>browse_links.php?mode=wizard</script>
									<JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
								</link>
							</wizards>
						</config>
					</TCEforms>
				</link>
				<imageAspectRatio>
					<TCEforms>
						<label>Image Aspect Ratio</label>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Keep original proportion</numIndex>
									<numIndex index="1">0</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">5:1</numIndex>
									<numIndex index="1">5</numIndex>
								</numIndex>
								<numIndex index="2" type="array">
									<numIndex index="0">4:1</numIndex>
									<numIndex index="1">4</numIndex>
								</numIndex>
								<numIndex index="3" type="array">
									<numIndex index="0">3:1 (Standard TV)</numIndex>
									<numIndex index="1">3</numIndex>
								</numIndex>
								<numIndex index="4" type="array">
									<numIndex index="0">2:1</numIndex>
									<numIndex index="1">2</numIndex>
								</numIndex>
								<numIndex index="5" type="array">
									<numIndex index="0">1:1</numIndex>
									<numIndex index="1">1</numIndex>
								</numIndex>
								<numIndex index="6" type="array">
									<numIndex index="0">4:3 (Standard TV)</numIndex>
									<numIndex index="1">43</numIndex>
								</numIndex>
								<numIndex index="7" type="array">
									<numIndex index="0">16:9 (Widescreen HD TV)</numIndex>
									<numIndex index="1">169</numIndex>
								</numIndex>
								<numIndex index="8" type="array">
									<numIndex index="0">3:2 (35mm)</numIndex>
									<numIndex index="1">32</numIndex>
								</numIndex>
							</items>
							<default>0</default>
						</config>
					</TCEforms>
				</imageAspectRatio>
				<maxWidth type="array">
					<TCEforms type="array">
						<label>Max Width (leave blank to fill containter width)</label>
						<config type="array">
							<type>input</type>
							<size>2</size>
							<max>0</max>
							<eval>int</eval>
							<range type="array">
								<upper>2000</upper>
								<lower>0</lower>
							</range>
							<default type="integer">0</default>
						</config>
					</TCEforms>
				</maxWidth>
				<maxWidthUnit>
					<TCEforms>
						<label>Max Width Unit (pixels or percentage)</label>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Pixels</numIndex>
									<numIndex index="1">0</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Percentage</numIndex>
									<numIndex index="1">1</numIndex>
								</numIndex>
							</items>
							<default>0</default>
						</config>
					</TCEforms>
				</maxWidthUnit>
				<cssClass type="array">
					<TCEforms type="array">
						<label>CSS Class(es)</label>
						<config type="array">
							<type>input</type>
							<size>48</size>
							<eval>trim</eval>
						</config>
					</TCEforms>
				</cssClass>
				<margin type="array">
					<TCEforms type="array">
						<label>Margin (top,right,bottom,left - numbers only, separated by commas e.g. 0, 10,10,0)</label>
						<config type="array">
							<type>input</type>
							<size>48</size>
							<eval>trim</eval>
						</config>
					</TCEforms>
				</margin>
				<padding type="array">
					<TCEforms type="array">
						<label>Padding (top,right,bottom,left - numbers only, separated by commas e.g. 0, 10,10,0)</label>
						<config type="array">
							<type>input</type>
							<size>48</size>
							<eval>trim</eval>
						</config>
					</TCEforms>
				</padding>
				<borderStyle>
					<TCEforms>
						<label>Border Style</label>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">None</numIndex>
									<numIndex index="1">0</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Solid</numIndex>
									<numIndex index="1">solid</numIndex>
								</numIndex>
								<numIndex index="2" type="array">
									<numIndex index="0">Dotted</numIndex>
									<numIndex index="1">dotted</numIndex>
								</numIndex>
								<numIndex index="3" type="array">
									<numIndex index="0">Dashed</numIndex>
									<numIndex index="1">dashed</numIndex>
								</numIndex>
								<numIndex index="4" type="array">
									<numIndex index="0">Double</numIndex>
									<numIndex index="1">double</numIndex>
								</numIndex>
								<numIndex index="5" type="array">
									<numIndex index="0">Groove</numIndex>
									<numIndex index="1">groove</numIndex>
								</numIndex>
								<numIndex index="6" type="array">
									<numIndex index="0">Ridge</numIndex>
									<numIndex index="1">ridge</numIndex>
								</numIndex>
								<numIndex index="7" type="array">
								 	<numIndex index="0">Inset</numIndex>
								 	<numIndex index="1">inset</numIndex>
								</numIndex>
								<numIndex index="8" type="array">
									<numIndex index="0">Outset</numIndex>
									<numIndex index="1">outset</numIndex>
								</numIndex>
							</items>
							<default>0</default>
						</config>
					</TCEforms>
				</borderStyle>
				<borderWidth type="array">
					<TCEforms type="array">
						<label>Border Width</label>
						<config type="array">
							<type>input</type>
							<size>48</size>
							<eval>trim</eval>
						</config>
					</TCEforms>
				</borderWidth>
				<borderColor type="array">
					<TCEforms type="array">
						<label>Border Color (red, black, #4d4d4d, #808080, etc)</label>
						<config type="array">
							<type>input</type>
							<size>48</size>
							<eval>trim</eval>
						</config>
					</TCEforms>
				</borderColor>
				<display>
					<TCEforms>
						<label>Display</label>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Block</numIndex>
									<numIndex index="1">block</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Inline</numIndex>
									<numIndex index="1">inline</numIndex>
								</numIndex>
							</items>
							<default>block</default>
						</config>
					</TCEforms>
				</display>
				<float>
					<TCEforms>
						<label>Float</label>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Not Floated</numIndex>
									<numIndex index="1">none</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Left</numIndex>
									<numIndex index="1">left</numIndex>
								</numIndex>
								<numIndex index="2" type="array">
									<numIndex index="0">Right</numIndex>
									<numIndex index="1">right</numIndex>
								</numIndex>
							</items>
							<default>none</default>
						</config>
					</TCEforms>
				</float>
				<position>
					<TCEforms>
						<label>Position</label>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Static</numIndex>
									<numIndex index="1">static</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Absolute</numIndex>
									<numIndex index="1">absolute</numIndex>
								</numIndex>
								<numIndex index="2" type="array">
									<numIndex index="0">Relative</numIndex>
									<numIndex index="1">relative</numIndex>
								</numIndex>
							</items>
							<default>static</default>
						</config>
					</TCEforms>
				</position>
				<positionCoordinates type="array">
					<TCEforms type="array">
						<label>Position Coordinates (x,y)</label>
						<config type="array">
							<type>input</type>
							<size>48</size>
							<eval>trim</eval>
						</config>
					</TCEforms>
				</positionCoordinates>
				<positionCoordinatesOrigin>
					<TCEforms>
						<label>Image Aspect Ratio</label>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Left / Top</numIndex>
									<numIndex index="1">0</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Right / Top</numIndex>
									<numIndex index="1">1</numIndex>
								</numIndex>
								<numIndex index="2" type="array">
									<numIndex index="0">Left / Bottom</numIndex>
									<numIndex index="1">2</numIndex>
								</numIndex>
								<numIndex index="3" type="array">
									<numIndex index="0">Right / Bottom</numIndex>
									<numIndex index="1">3</numIndex>
								</numIndex>
							</items>
						</config>
					</TCEforms>
				</positionCoordinatesOrigin>
				<zIndex type="array">
					<TCEforms type="array">
						<label>Z-Index</label>
						<config type="array">
							<type>input</type>
							<size>4</size>
							<eval>trim</eval>
						</config>
					</TCEforms>
				</zIndex>
			</el>
	</ROOT>
</T3DataStructure>